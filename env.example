# MinIO 配置
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123456

# PostgreSQL 配置
POSTGRES_DB=finnet
POSTGRES_USER=finnet
POSTGRES_PASSWORD=finnet123456

# Milvus MinIO 配置（Milvus内部使用）
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# 应用配置（后续使用）
BGE_API_KEY=your_bge_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# LLM 配置
# 云端 LLM（使用 OpenAI 兼容格式的 API）
CLOUD_LLM_ENABLED=false
CLOUD_LLM_API_BASE=https://api.deepseek.com  # API URL（必需），支持 OpenAI、DeepSeek、LocalAI、vLLM 等兼容服务
CLOUD_LLM_API_KEY=your-api-key  # API 密钥（必需）
CLOUD_LLM_MODEL=deepseek-chat  # 模型名称

# 本地 LLM（Ollama）
LOCAL_LLM_ENABLED=true
LOCAL_LLM_MODEL=qwen2.5:7b
LOCAL_LLM_API_BASE=http://localhost:11434

# Embedding 配置
# 模式选择：local（本地模型）或 api（API 调用）
EMBEDDING_MODE=local

# 本地模型配置（EMBEDDING_MODE=local 时使用）
EMBEDDING_MODEL=bge-large-zh-v1.5
EMBEDDING_DIM=1024
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu
BGE_MODEL_PATH=BAAI/bge-large-zh-v1.5
BCE_MODEL_PATH=maidalun1020/bce-embedding-base_v1

# API 配置（EMBEDDING_MODE=api 时使用）
# ⚠️  重要：EMBEDDING_DIM 必须与 API 模型返回的向量维度匹配！
#     常见模型维度：
#     - text-embedding-ada-002: 1536
#     - text-embedding-3-small: 1536
#     - text-embedding-3-large: 3072
#     - bge-large-zh-v1.5: 1024
#
#     如果更换模型，需要：
#     1. 更新 EMBEDDING_DIM 配置
#     2. 重建 Milvus Collection（运行 scripts/recreate_milvus_collection.py）
#     3. 重新执行向量化作业
#
# EMBEDDING_API_URL=https://api.openai.com/v1/embeddings
# EMBEDDING_API_KEY=sk-your-api-key-here
# EMBEDDING_API_MODEL=text-embedding-ada-002
# EMBEDDING_DIM=1536  # 必须与模型匹配！
# EMBEDDING_API_TIMEOUT=30
# EMBEDDING_API_MAX_RETRIES=3

# 爬虫配置
FINNET_DATA_ROOT=/data/finnet
CRAWLER_WORKERS=6
CRAWLER_OLD_PDF_DIR=
CRAWLER_ENABLE_VALIDATION=true
CRAWLER_AUTO_QUARANTINE=true

# MinIO对象存储配置（用于数据湖存储）
USE_MINIO=false
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123456
MINIO_BUCKET=finnet-datalake

# Neo4j 图数据库配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=finnet123456
NEO4J_DATABASE=neo4j

# Elasticsearch 全文搜索引擎配置
ELASTICSEARCH_HOSTS=http://localhost:9200
# 注意：如果 docker-compose.yml 中配置了 xpack.security.enabled=false（开发环境），则不需要用户名和密码
# 只有在启用安全认证时才需要配置以下两项
# ELASTICSEARCH_USER=elastic
# ELASTICSEARCH_PASSWORD=elastic123456
ELASTICSEARCH_INDEX_PREFIX=finnet
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=true
